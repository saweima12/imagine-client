.login-wrapper
    width: 100%
    height: 100vh
    background: #273c4f
    
    .login-ux
        width: 100%

.login-form
    box-sizing: border-box
    width: 100%
    max-width: 30rem

    .login-title
        color: #eee
        font-size: 1.8rem
        font-weight: 600

    .field
        box-sizing: border-box
        background: rgba(0, 0, 0, .3)
        border: 1px solid #444
        border-radius: .2rem
        color: #f4f5f6
        margin-bottom: 1.2rem

    .icon
        font-size: 12px
        width: 2rem;

    .login-btn
        border: 1px solid #aaa
        border-radius: .2rem
        background: rgba(11,11,23,.5)
        width: 100%
        color: #eee

        &:hover
            background: #1a1a2d

        &:active
            background: #10101c

    input
        background: transparent
        font-size: 1rem
        width: 100%
        height: 2.5rem
    