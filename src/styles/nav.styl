.top-navbar 
    position: fixed
    display: flex
    z-index: 999
    background: var(--navbar)
    border-bottom: 1px;
    box-shadow: rgba(0, 0, 0, 0.25) 0px -2px 10px;
    width: 100%
    transition: position .3s    

.nav-menu
    position: fixed
    top: 0
    left: 0
    bottom: 0
    background: var(--bg-color)
    border-right: 1px solid var(--border)
    width: var(--drawer-mobile-width)
    transform: translateX(calc(var(--drawer-mobile-width) * -1))
    transition: transform .3s

.nav-list
    color: var(--text)
    font-size: 1.1rem
    font-weight: 700
    font-family: var(--font-family)

.menu-mask
    position: fixed
    top: 0
    left: 0
    background: var(--mask-bg)
    display: none
    width: 100vw
    height: 100vh

.menu-open 
    .nav-menu 
        transform: translateX(0)
    .menu-mask
        display: flex

@media screen and (min-width: $screen-lg) 
    .nav-menu
        transform: none